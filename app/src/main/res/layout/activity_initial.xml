<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.InitialActivity">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:src="@drawable/photo"
        android:layout_marginTop="25dp"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@color/appColor"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/btn_ingresar"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ingresar"
                android:text="@string/guestSingIn"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@color/appColor"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/btn_nextLogin"
        android:layout_below="@+id/btn_ingresar"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_nextLogin"
                android:text="Login/Registrarse"
                android:textColor="#fff"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>